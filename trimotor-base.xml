<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">

    <startup>
      <splash-texture>Aircraft/Ford-Trimotor/trimotor-splash.png</splash-texture>
    </startup>

    <model>
      <path archive="y">Aircraft/Ford-Trimotor/Models/trimotor.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <sound>
      <path archive="y">Aircraft/Ford-Trimotor/Sounds/trimotor-sound.xml</path>
    </sound>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int" n="0">  0 </int>                                           <!--  0 immat -->
        <int type="int" n="1">  0 </int>                                           <!--  1 immat -->
        <int type="int" n="2">  0 </int>                                           <!--  2 immat -->
        <int type="int" n="3">  0 </int>                                           <!--  3 immat -->
        <int type="int" n="4">  0 </int>                                           <!--  4 immat -->
        <int type="int" n="5">  0 </int>                                           <!--  5 immat -->
        <int type="bool" n="6" alias="/smoke/active"> 0 </int>                     <!--  6 start smoke -->
        <int type="int" n="7" alias="smoke/particlepersec"> 50 </int>              <!--  7 particlepersec -->
        <int type="int" n="10" alias="controls/armament/trigger">0</int>           <!-- 10 reserved for bombable mode -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
        <float n="2" alias="/position/gear-agl-m"> 0 </float>                      <!-- altitude for MP shadow -->
        <float n="3" alias="/smoke/colors/knob-red">1</float>                      <!-- 3 smoke mixer red setting -->
        <float n="4" alias="/smoke/colors/knob-green">1</float>                    <!-- 4 smoke mixer green setting -->
        <float n="5" alias="/smoke/colors/knob-blue">1</float>                     <!-- 5 smoke mixer blue setting -->
        <string n="9" type="string" />                                             <!-- string[9] reserved for bombable mode -->
      </generic>
    </multiplay>

    <help>
      <title>Ford 4.AT Trimotor</title>
    </help>

    <menubar include="Dialogs/trimotor-menu.xml"/>

  </sim>

  <input>
    <keyboard include="Nasal/trimotor-keyboard.xml">
    </keyboard>
  </input>

  <consumables>
    <fuel>
      <tank n="0">
       <level-gal_us>200</level-gal_us>
      </tank>
      <tank n="1">
        <level-gal_us>200</level-gal_us> 
      </tank>
      <tank n="2">
        <level-gal_us>200</level-gal_us> 
      </tank>
    </fuel>
  </consumables>

  <controls>
    <engines>
      <engine n="0">
        <magnetos>3</magnetos>
      </engine>
      <engine n="1">
        <magnetos>3</magnetos>
      </engine>
      <engine n="2">
        <magnetos>3</magnetos>
      </engine>
    </engines>
  </controls>

  <engines>
    <engine>
      <rpm type="double">10</rpm>
    </engine>
    <engine>
      <rpm type="double">10</rpm>
    </engine>
    <engine>
      <rpm type="double">10</rpm>
    </engine>
  </engines>

  <nasal>
    <doors>
      <file>Aircraft/Ford-Trimotor/Nasal/doors.nas</file>
    </doors>
    <trimotor>
      <file>Aircraft/Ford-Trimotor/Nasal/liveries.nas</file>
      <file>Aircraft/Ford-Trimotor/Nasal/light.nas</file>
    </trimotor>
  </nasal>

</PropertyList>
